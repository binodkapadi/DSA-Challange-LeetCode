SOLUTION ===>>

class Solution {
public:
    long long getDescentPeriods(vector<int>& prices) {
        int n = prices.size();

        long long ans = 1, len = 1;

        for(int i = 1; i <= n-1; i++){
            if(prices[i] == prices[i-1] - 1){
                len++;
            }
            else{
                len = 1;
            }
            ans += len;
        }
        return ans;
    }
};
