SOLUTION ==>

class Solution {
public:
    int countPartitions(vector<int>& nums) {
        int n = nums.size();

        int partition = 0;
        int sum = 0;

        for(int i = 0; i < n; i++){
            sum += nums[i];
        }
        if(sum % 2 == 0)
        {
            partition = n-1;        
        }
       return partition; 
    }
};
