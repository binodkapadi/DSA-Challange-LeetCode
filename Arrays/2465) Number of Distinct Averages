SOLUTION ==>

class Solution {
public:
    int distinctAverages(vector<int>& nums) {
        sort(nums.begin(), nums.end());
        int i = 0, j = nums.size() - 1;
        set<double> distinct;  
        
        while (i < j) {
            double avg = (nums[i] + nums[j]) / 2.0;
            distinct.insert(avg);
            i++;
            j--;
        }
        
        return distinct.size();   
    }
};
