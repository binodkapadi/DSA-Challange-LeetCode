SOLUTION ==>

class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {
        int n = digits.size();

// Traverse from last digit

        for(int i = n - 1; i >= 0; i--){

// If current digit is less than 9, just increment and return

            if(digits[i] < 9){
                digits[i]++;
                return digits;
            }

// If it's 9, make it 0 and continue to next digit

            digits[i] = 0;
        }

// If all digits were 9, we need to add 1 at the front

        digits.insert(digits.begin(), 1);
        return  digits;
    }
};
