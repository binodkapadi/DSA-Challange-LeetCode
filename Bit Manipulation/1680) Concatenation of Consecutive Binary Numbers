SOLUTION ==>>

class Solution {
public:
    int concatenatedBinary(int n) {
        const int MOD = 1e9 + 7;
        long long result = 0;
        int bitLength = 0;
        
        for (int i = 1; i <= n; i++) {
            // If i is power of 2, increase bit lengthA
            if ((i & (i - 1)) == 0) {
                bitLength++;
            }
            
            result = ((result << bitLength) + i) % MOD;
        }    
        return result;
    }
};
